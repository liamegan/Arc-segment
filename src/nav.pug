ul#nav
  each item in items 
    li
      a(href=item.url)=item.name

script.
  const nav = document.getElementById("nav");

  document.body.addEventListener('keyup', (e) => {
    console.log(e.key);
    if('~`'.indexOf(e.key) > -1) {
      nav.classList.toggle('visible');
      e.preventDefault();
    }
  })